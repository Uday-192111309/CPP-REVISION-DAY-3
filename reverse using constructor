#include <iostream>
using namespace std;
class reverse_number
{
	public:
		reverse_number (int number)
		{
			int rem,reverse=0;
				cout<<"Please input the number ";
				cin>>number;
				while(number!=0)
				{
					rem=number%10;
					reverse=reverse*10+rem;
					number /=10;
				}
				cout<<"reversed number is "<<reverse;
		}
	};
		int main()
		{
			reverse_number obj(5);
		}
